@{
    ViewBag.Title = "TopTal Time Manager Login";
}

@using (Html.BeginForm())
{
    <div class="InputForm">
        <ul class="FormFields">
            <li>
                <label>Username:</label>
                <input id="UserName" name="UserName" type="text">
            </li>
            <li>
                <label>Password:</label>
                <input id="Password" name="Password" type="password" />
            </li>
            <li id="RegistrationError" class="ErrorMessage" style="display:none;"></li>
            <li>
                <label>&nbsp;</label>
                <input id="btnLogin" type="button" value="Login" style="width: 60px;" />
                <input id="btnRegister" type="button" value="Register" style="margin-left:40px; width:70px;" />
            </li>
        </ul>
    </div>
    <div>
        Your password must be at least eight (8) characters and with at least the following:
        <ul style="list-style-type: disc; margin-top:0px; padding-top:0px;">
            <li>At least one uppercase letter</li>
            <li>At least one lowercase letter</li>
            <li>At least one numeric digit</li>
            <li>At least one special character. Valid special characters are !&#64;#$%^&amp;* </li>
        </ul>
    </div>
}

@section scripts {
<script src="@Url.Content("~/Scripts/TimeManager/Home.js")"></script>
}
